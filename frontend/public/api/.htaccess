# Allow PHP execution in API directory
Options -Indexes

# Enable PHP processing for cPanel/EasyApache
<FilesMatch "\.php$">
    SetHandler application/x-httpd-ea-php80
</FilesMatch>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Allow all requests to upload.php
<Files "upload.php">
    Require all granted
</Files>
